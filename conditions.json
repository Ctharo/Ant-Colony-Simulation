{
	"conditions": {
		"AtHome": {
			"description": "Check if ant is near colony",
			"evaluation": {
				"operator": "LESS_THAN",
				"property": "distance_to_colony",
				"type": "PropertyCheck",
				"value_from": "colony_radius"
			}
		},
		"IsCarryingFood": {
			"description": "Check if ant is carrying any food",
			"evaluation": {
				"operator": "EQUALS",
				"property": "is_carrying_food",
				"type": "PropertyCheck",
				"value": true
			}
		},
		"IsFoodInReach": {
			"description": "Check if food is reachable by ant",
			"evaluation": {
				"operator": "GREATER_THAN",
				"property": "food_in_reach_count",
				"type": "PropertyCheck",
				"value": 1
			}
		},
		"IsFoodInView": {
			"description": "Check if food is visible to ant",
			"evaluation": {
				"operator": "GREATER_THAN",
				"property": "food_in_view_count",
				"type": "PropertyCheck",
				"value": 0
			}
		},
		"IsFoodPheromoneSensed": {
			"description": "Check if food pheromones are detected",
			"evaluation": {
				"operator": "EQUALS",
				"property": "is_food_pheromones_sensed",
				"type": "PropertyCheck",
				"value": true
			}
		},
		"IsHomePheromoneSensed": {
			"description": "Check if home pheromones are detected",
			"evaluation": {
				"operator": "GREATER_THAN",
				"property": "home_pheromones_sensed_count",
				"type": "PropertyCheck",
				"value": 0
			}
		},
		"LowEnergy": {
			"description": "Check if ant's energy is below threshold",
			"evaluation": {
				"operator": "LESS_THAN",
				"property": "energy.current_level",
				"type": "PropertyCheck",
				"value_from": "energy.low_energy_threshold"
			}
		},
		"OverloadedWithFood": {
			"description": "Check if ant is carrying near maximum capacity",
			"evaluation": {
				"operator": "GREATER_THAN_EQUAL",
				"property": "carried_food_mass",
				"type": "PropertyCheck",
				"value_from": "strength.carry_max"
			}
		},
		"IsCarryingFood": {
			 "description": "Whether the ant is currently carrying food",
			 "evaluation": {
				"operator": "GREATER_THAN",
				"property": "carried_food_mass",
				"type": "PropertyCheck",
				"value": 0
			}
		},
		"IsHomePheromoneSensed": {
			  "description": "Whether any home pheromones are currently sensed",
			  "evaluation": {
				"operator": "GREATER_THAN",
				"property": "home_pheromones_sensed_count",
				"type": "PropertyCheck",
				"value": 0
		  }
		},
		"IsFoodPheromoneSensed": {
			  "description": "Whether any food pheromones are currently sensed", 
			  "evaluation": {
				"operator": "GREATER_THAN",
				"property": "food_pheromones_sensed_count",
				"type": "PropertyCheck",
				"value": 0
		  }
		},
	}
}
